
{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Deploy static site infrastructure to AWS.",
    "Metadata": {},
    "Mappings": {},
    "Conditions": {},
    "Parameters": {
      "SiteNameParameter": {
        "Type" : "String",
        "MinLength" : 5,
        "Description": "Enter the top-level site name, as in example.com (without the www.)"
      }
    },
    "Resources": {
      
      "s3Bucket": {
        "Type": "AWS::S3::Bucket",
        "Properties": {
          "BucketName": { "Ref": "SiteNameParameter" },
          "AccessControl": "PublicRead",
          "WebsiteConfiguration": {
            "IndexDocument": "index.html",
            "ErrorDocument": "error-404.html"
          }
        }
      },

      "s3BucketRedirect": {
        "Type": "AWS::S3::Bucket",
        "Properties": {
          "BucketName": { "Fn::Join": [ "", [ "www.", { "Ref": "SiteNameParameter" } ] ] },
          "WebsiteConfiguration": {
            "RedirectAllRequestsTo": {
              "HostName": {
                "Fn::Select": [ "2", { "Fn::Split": [ "/", { "Fn::GetAtt": [ "s3Bucket", "WebsiteURL" ] } ] } ]
              }
            }
          }
        }
      },
      
      "s3BucketPolicy": {
        "Type": "AWS::S3::BucketPolicy",
        "Properties": {
          "Bucket" : { "Ref": "s3Bucket" },
          "PolicyDocument" : {
            "Version": "2012-10-17",
            "Statement": [{
              "Sid": "PublicReadGetObject",
              "Effect": "Allow",
              "Principal": "*",
              "Action": [ "s3:GetObject" ],
              "Resource": { "Fn::Join": [ "", [ "arn:aws:s3:::", { "Ref": "s3Bucket" }, "/*" ] ] }
            }]
          }
        }
      },

      "cloudfrontDistribution": {
         "Type": "AWS::CloudFront::Distribution",
         "Properties": {
            "DistributionConfig": {
              "Aliases" : [ { "Ref": "SiteNameParameter" }, { "Fn::Join": [ "", [ "www.", { "Ref": "SiteNameParameter" } ] ] } ],
              "DefaultCacheBehavior" : {
                "ForwardedValues" : {
                  "QueryString" : false
                },
                "TargetOriginId" : "S3-Bucket",
                "ViewerProtocolPolicy" : "allow-all"
              },
              "DefaultRootObject" : "index.html",
              "Enabled" : true,
              "HttpVersion" : "http1.1",
              "Origins" : [{
                "DomainName" : { "Fn::GetAtt": [ "s3Bucket", "DomainName" ] },
                "Id" : "S3-Bucket",
                "S3OriginConfig": {}
              }]
            }
         }
      },
      
      "route53HostedZone": {
        "Type": "AWS::Route53::HostedZone",
        "Properties": {
          "Name": { "Ref": "SiteNameParameter" }
        }
      },

      "route53RecordSetGroup": {
        "Type": "AWS::Route53::RecordSetGroup",
        "Properties": {
          "HostedZoneName": { "Ref": "SiteNameParameter" },
          "RecordSets": [
            {
              "Type" : "AWS::Route53::RecordSet",
              "Properties" : {
                "AliasTarget" : {
                  "DNSName" : { "Fn::GetAtt": [ "cloudfrontDistribution", "DomainName" ] },
                  "HostedZoneId" : "Z2FDTNDATAQYW2"
                },
                "Name" : { "Ref": "SiteNameParameter" },
                "Type" : "A"
              }
            },
            {
              "Type" : "AWS::Route53::RecordSet",
              "Properties" : {
                "AliasTarget" : {
                  "DNSName" : { "Fn::GetAtt": [ "cloudfrontDistribution", "DomainName" ] },
                  "HostedZoneId" : "Z2FDTNDATAQYW2"
                },
                "Name" : { "Fn::Join": [ "", [ "www.", { "Ref": "SiteNameParameter" } ] ] },
                "Type" : "A"
              }
            }
          ]
        }
      }
      
    },
    "Outputs": {}
}
    
